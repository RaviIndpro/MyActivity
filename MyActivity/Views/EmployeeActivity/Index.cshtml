@model IEnumerable<EmployeeActivity>
@{
    ViewData["Title"] = "Index";
}
<partial name ="_Notification" />

<h1>Activity List</h1> <br />
<a asp-controller ="EmployeeActivity" asp-action ="Create" class = "btn btn-primary">
    Add new Activity
</a>
<br />
<br />



<table table-bordered width = "100%">
    <thead>
        <tr>
            <th>
                Activity
            </th>
             <th>
                
            </th>
             <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width = "60%">
                    @obj.ActivityName
                </td>
                 <td width = "15%">
                   
                    <a asp-controller = "EmployeeActivity" asp-action ="Edit" asp-route-id ="@obj.Id" class ="btn btn-primary">Edit</a>
                </td>
                <td width = "15%">
                   
                    <a asp-controller = "EmployeeActivity" asp-action ="Delete" asp-route-id ="@obj.Id" class ="btn btn-danger">Delete</a>
                </td>
            </tr>

            
        }

    </tbody>
</table>

