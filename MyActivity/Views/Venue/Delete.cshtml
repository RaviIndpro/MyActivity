@model Venue

<form method ="post" asp-action ="DeletePost">
    <input asp-for= "Id" hidden />
   <h2>
       Delete Venue
   </h2>
   <label asp-for ="StadiumName"></label>
   <input asp-for ="StadiumName" class ="form-control" />
   <span asp-validation-for="StadiumName" class ="text-danger">

   </span><br />
   <button type ="submit" class= "btn btn-danger" 
   onclick="return confirm('Are you sure you want to delete')">
       Delete
   </button>
   <a asp-controller="Venue" asp-action="Index" class = "btn btn-secondary">
       Back
   </a>
</form>
